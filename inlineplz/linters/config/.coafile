[all]
ignore = **/venv/**,**/.env/**,**/.tox/**,**/.git/**,**/node_modules/**,**/godeps/**,**/vendor/**,**/site-packages/**,**/bin/**,**/spec/**,**/migrate/**,**/fixtures/**,**/cassettes/**

[all.rst]
bears = reSTLintBear
files = **.rst

[all.bash]
bears = ShellCheckBear
files = **.sh
shell = bash
shellcheck_ignore = SC2046, SC2154, SC2155

[all.jinja2]
bears = Jinja2Bear
files = **.jj2

[all.csharp]
bears = CSharpLintBear
files = **.cs

[all.xml]
bears = XMLBear
files = **.xml

[all.html]
bears = HTMLLintBear, BootLintBear
files = **.html

[all.csv]
bears = CSVLintBear
files = **.csv

[all.text]
bears = InvalidLinkBear, WriteGoodLintBear, AlexBear, LanguageToolBear
files = **.txt, **.md, **.rst, **.text

[all.sql]
bears = SQLintBear
files = **.sql

[all.java]
bears = InferBear, JavaPMDBear
files = **.java

[all.css]
bears = CSSLintBear
files = **.css

[all.ruby]
bears = RuboCopBear, RubySmellBear
files = **.rb
