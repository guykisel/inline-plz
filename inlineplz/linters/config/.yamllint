---

extends: default

ignore: |
  */ansible/*
  */playbooks/*
  */cassettes/*
  */fixtures/*

rules:
  braces:
    level: warning
    max-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  colons:
    level: warning
  commas:
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  line-length: disable
  truthy: disable
